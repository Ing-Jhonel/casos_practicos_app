program caso5;
var
  dia: integer;
begin
  writeln('Introduce un número del 1 al 7:');
  readln(dia);
  
  case dia of
    1: writeln('Lunes');
    2: writeln('Martes');
    3: writeln('Miércoles');
    4: writeln('Jueves');
    5: writeln('Viernes');
    6: writeln('Sábado');
    7: writeln('Domingo');
  else
    writeln('Número inválido. Debe ser entre 1 y 7.');
  end;
end.